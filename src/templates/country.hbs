{{#each this}}
<li class="country__item">
    <h2>{{name}}</h2>
    <div class="country__info">
        <div class="country__info-item">
<p>Capital: {{capital}}</p>
<p>Population: {{population}}</p>
    <p>Languages:</p>
<ul>
{{#each languages}}
    <li>
    {{name}}
    </li>
    {{/each}}
    </ul>
    </div>
<div class="country__img">  
      <img  src="{{flag}}">
</div>
</div>
</li>
{{/each}}